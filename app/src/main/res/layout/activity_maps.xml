<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/woodbackround2"
    tools:context=".MainActivity"
    android:id="@+id/postroulette"
    android:rowCount="4"
    android:columnCount="1">

<RelativeLayout
    android:layout_marginBottom="2dp"
    android:layout_width="fill_parent"
    android:layout_height="352dp"
    android:id="@+id/mainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/restname">
    </LinearLayout>


    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/mapFrag"
        android:weightSum="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            tools:context=".MapsActivity"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="263dp"
        android:layout_height="35dp"
        android:id="@+id/yelpRatingDisplay"
        android:background="@drawable/woodbackround"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/mapFrag"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/mapFrag">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/business_name"
            android:layout_height="fill_parent"
            android:layout_weight="1.25"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="Name Here------------------------------"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/rating"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_weight="0.75"
        android:layout_margin="5dp"/>


    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:id="@+id/yeodbackround"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/yelpRatingDisplay"
        android:layout_alignStart="@+id/yelpRatingDisplay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Click for more Restaurant Information:"
                android:id="@+id/text_radius"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="right"
                android:paddingRight="15px"
                android:paddingBottom="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/yelpButton" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yelpbutton"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:id="@+id/yelpButton"
                android:onClick="onYelpButton"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />


    </RelativeLayout>


</RelativeLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".MainActivity"
    android:id="@+id/blacklist">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"


        android:layout_weight="1"
        android:background="#FFFFFF">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Get Directions"
            android:textColor="#ffffff"
            android:background="@drawable/woodbackround"
            android:onClick="getDirections"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:id="@+id/button2"
            android:textSize="30sp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        tools:context=".MainActivity"
        android:background="#FFFFFF">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Next Restaurant"
            android:background="@drawable/woodbackround"
            android:textColor="#ffffff"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="30sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"

        android:background="#FFFFFF">

        <Button
            android:id="@+id/blacklistbutton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onBlack"
            android:text="Add to Blocklist"
            android:background="@drawable/woodbackround"
            android:textColor="#ffffff"
            android:layout_margin="2dp"
            android:layout_gravity="center_horizontal"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="30sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Spin Again"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="@drawable/woodbackround"
            android:id="@+id/back"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"/>
    </RelativeLayout>




</LinearLayout>


</LinearLayout>
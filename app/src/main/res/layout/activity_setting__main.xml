<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/applicationbackgroundsmall">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical"
            android:fillViewport="true">
            <TextView
                android:text="Preferences"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp">
                <SeekBar
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekbar_radius"
                    android:layout_gravity="bottom"
                    android:max="50"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/custom_hint_design"
                    android:onClick="onHintRadius"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/seekbar_radius"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Radius (mi.)"
                    android:id="@+id/text_radius"
                    android:textColor="#ffffff"/>
                <requestFocus />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"></RelativeLayout>

            <TextView
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/rating"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Yelp Rating"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:layout_weight="0.33" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp">
                <Spinner
                    android:id="@+id/rating"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/Choose_Yelp_Rating"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_hint_design"
                    android:onClick="onHintSpinner"
                    android:layout_alignTop="@+id/rating"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <!--<Button-->
                <!--android:text="Clear Preferences"-->
                <!--android:layout_width="185dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="10dp"-->
                <!--android:id="@+id/button_clear_preferences"-->
                <!--android:onClick="onClear"-->
                <!--android:layout_gravity="center_horizontal" />-->
            <Button
                android:text="View Blocked Restaurants"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/button_go_to_downvote_screen"
                android:onClick="goToDownVote"
                android:background="#6a0500"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal" />

    <Button
        android:text="Back To Wheel"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/backtowheel"
        android:background="#6a0500"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>



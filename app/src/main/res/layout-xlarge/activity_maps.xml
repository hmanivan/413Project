<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/woodbackround2"
    tools:context=".MainActivity"
    android:id="@+id/postroulette"
    android:rowCount="4"
    android:columnCount="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/mapFrag"
        android:weightSum="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            tools:context=".MapsActivity"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.50" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainFragment">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="263dp"
            android:layout_height="100dp"
            android:id="@+id/yelpRatingDisplay"
            android:background="@drawable/woodbackround"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/business_name"
                android:layout_height="fill_parent"
                android:layout_weight="1.25"
                android:textColor="#85C8E8"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/rating"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_weight="0.75"
                android:layout_margin="5dp"/>


        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yeodbackround"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/yelpRatingDisplay"
            android:layout_alignStart="@+id/yelpRatingDisplay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Click for more Restaurant Information:"
                android:id="@+id/text_radius"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingRight="15px"
                android:paddingBottom="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/yelpButton" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yelpbutton"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:id="@+id/yelpButton"
                android:onClick="onYelpButton"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/uberbackground"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/yeodbackround"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/uber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/uberButton"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="10px"
                android:paddingRight="15px"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/uberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/uber_button"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:weightSum="3"
        tools:context=".MainActivity"
        android:id="@+id/blacklist">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"


            android:layout_weight="1"
            android:background="#FFFFFF">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"

                android:layout_margin="2dp"
                android:text="Get Directions"
                android:textColor="#ffffff"
                android:background="@drawable/woodbackround"
                android:onClick="getDirections"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/button2"
                android:textSize="30sp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            tools:context=".MainActivity"
            android:background="#FFFFFF">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:text="Next Restaurant"
                android:background="@drawable/woodbackround"
                android:textColor="#ffffff"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"

            android:background="#FFFFFF">

            <Button
                android:id="@+id/blacklistbutton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:onClick="onBlack"
                android:text="Add to Blocklist"
                android:background="@drawable/woodbackround"
                android:textColor="#ffffff"
                android:layout_margin="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"

                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/applicationbackgroundsmall"
    tools:context=".MainActivity"
    android:id="@+id/postroulette"
    android:rowCount="4"
    android:columnCount="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/restname">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="815dp"
            android:layout_gravity="left|center_vertical"
            tools:context=".MapsActivity" />

    </LinearLayout>
    <ImageView
        android:layout_width="274dp"
        android:layout_height="wrap_content"

        android:id="@+id/rating"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_weight="0.61" />

    <ImageButton
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/yelpbutton"
    android:layout_gravity="center|right"
    android:layout_weight="0.21"
    android:id="@+id/yelpButton"
    android:onClick="onYelpButton"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        tools:context=".MainActivity"
        android:id="@+id/blacklist">






        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Meh..."
            android:textColor="#ffffff"
            android:background="#511916"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/blacklistbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBlack"
            android:textColor="#ffffff"
            android:background="#511916"
            android:text="Bleh!!!"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:background="#511916"
            android:text="Yes!!!"
            android:onClick="getDirections"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Wheel"
        android:id="@+id/back"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="goToDownVoteActivity"
        android:background="#511916"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        />
</LinearLayout>